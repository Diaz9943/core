#!/usr/bin/env bash

cd /home/core/src

KEY_UPDATE_HOURS=6

# are we in a virtualenv?
python -c 'import sys; print sys.real_prefix' 2>/dev/null && INVENV=1 || INVENV=0

# if not, activate it
if [[ "$INVENV" != "1" ]]
then
    # Activate the virtual env
    . ../bin/activate
fi

printf "from brave.core.scripts.update_chars import main\nmain(${KEY_UPDATE_HOURS}*60)" | paster shell /home/core/src/conf/production.ini
